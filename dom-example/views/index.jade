extends layout

block content
  h1= title
  p Welcome to #{title}
  div
    h2.
      DOM-HTML Way
    input(
      type="text"
      id="dom-number-input"
      placeholder="Enter Positive Enter"
    )
    input(
      type="text"
      id="dom-phrase-input"
      placeholder="Enter Catch Phrase"
    )
    button(
      type="button"
    ).
      Execute DOM
    div
    ul(
      id="dom-list"
    )

  div
    h2.
      DOM the JQuery Way
    input(
      type="text"
      id="jq-number-input"
      placeholder="Enter Positive Enter"
    )
    input(
      type="text"
      id="jq-phrase-input"
      placeholder="Enter Catch Phrase"
    )
    button(
      type="button"
    ).
      Execute JQuery
    div
      ul(
        id="JQ-list"
      )
